                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/forth_day_date_show"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="11/12"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
                <ImageView
                    android:id="@+id/forth_day_cloud_show"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/simple_weather_icon_04"/>
                <TextView
                    android:id="@+id/forth_day_temp_show"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="11°/2°"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/fifth_day_date_show"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="11/12"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
                <ImageView
                    android:id="@+id/fifth_day_cloud_show"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/simple_weather_icon_26"/>
                <TextView
                    android:id="@+id/fifth_day_temp_show"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="11°/2°"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/grid_view_layout"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:paddingTop="30dp"
            android:layout_below="@id/weahters_show"
            android:orientation="vertical">
            <!--<Button-->
                <!--android:id="@+id/btn_grid_laout_animator"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="动态"/>-->
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pm_view_layout"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_below="@id/grid_view_layout"
